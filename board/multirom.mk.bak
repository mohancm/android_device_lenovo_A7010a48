
USE_CLANG_PLATFORM_BUILD := false

# TWRP
# Display
TW_THEME := portrait_hdpi
RECOVERY_GRAPHICS_USE_LINELENGTH := true
TARGET_RECOVERY_PIXEL_FORMAT := "RGBA_8888"
TW_BRIGHTNESS_PATH := "/sys/devices/platform/leds-mt65xx/leds/lcd-backlight/brightness"
TW_MAX_BRIGHTNESS := 255
TW_NEW_ION_HEAP := true
TW_DEFAULT_BRIGHTNESS := 10
TW_EXCLUDE_SUPERSU := true
TW_USE_MODEL_HARDWARE_ID_FOR_DEVICE_ID := true

# Storage
RECOVERY_VARIANT := twrp
#TARGET_RECOVERY_FSTAB := device/lenovo/A7010a48/twrp.fstab
TW_INTERNAL_STORAGE_PATH := "/data/media"
TW_INTERNAL_STORAGE_MOUNT_POINT := "data"
TW_EXTERNAL_STORAGE_PATH := "/external_sd"
TW_EXTERNAL_STORAGE_MOUNT_POINT := "external_sd"
TW_MTP_DEVICE := "/dev/mtp_usb"
BOARD_MTP_DEVICE := "/dev/mtp_usb"
RECOVERY_SDCARD_ON_DATA := true

# MultiROM
TARGET_RECOVERY_IS_MULTIROM := true
MR_INPUT_TYPE := type_b
MR_INIT_DEVICES := device/lenovo/A7010a48/multirom/mr_init_devices.c
MR_PIXEL_FORMAT := "RGBA_8888"
RECOVERY_GRAPHICS_USE_LINELENGTH := true
MR_DPI := xxhdpi
MR_DPI_FONT := 216
MR_KEXEC_MEM_MIN := 0x40000000
MR_FSTAB := device/lenovo/A7010a48/twrp.fstab
MR_USE_MROM_FSTAB := true
MR_CONTINUOUS_FB_UPDATE := true
MR_NO_KEXEC := enabled
MR_NO_KEXEC := 4
MR_DEV_BLOCK_BOOTDEVICE := true
TARGET_RECOVERY_IS_MULTIROM := true

# Misc.
BOARD_USES_MMC_UTILS := true
BOARD_SUPPRESS_EMMC_WIPE := true
TW_HAS_DOWNLOAD_MODE := true
BOARD_RECOVERY_SWIPE := true
